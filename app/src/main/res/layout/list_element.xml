<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_snippet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get all pages" />

        <TextView
            android:id="@+id/beta_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/txt_snippet_name"
            android:layout_toEndOf="@+id/txt_snippet_name"
            android:layout_toRightOf="@+id/txt_snippet_name"
            android:fontFamily="sans-serif-condensed"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="@string/beta"
            android:textColor="#A32800"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>